extends layout

block content
  h1="Add A Player"

  form#formAddPlayer(name="addplayer",method="post",action="/players/update/#{player.username}")
    input#inputId(type="hidden", name="_id" value="#{player._id}")
    div
      input#inputfirstName(type="text", placeholder="First Name", name="first_name", value="#{player.first_name}")
    div
      input#inputlastName(type="text", placeholder="Last Name", name="last_name", value="#{player.last_name}")
    div
      input#inputUsername(type="text", placeholder="Username", name="username", value="#{player.username}")
    div
      button#btnSubmit(type="submit") submit
